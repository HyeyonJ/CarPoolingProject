		d_userEmail, d_userGender, d_idNum, d_licenseNum, d_licenseIdNum, d_carNum, d_signOut)
		VALUES(d_idx_seq.nextVal, #{dUserType}, #{dUserId}, #{dUserPw}, #{dUserName}, #{dUserTel},
		#{dUserEmail}, #{dUserGender}, #{dIdNum1}, #{dIdNum2}, #{dLicenseNum}, #{dLicenseIdNum},
		#{dCarNum}, 'false')
	</insert>
	
